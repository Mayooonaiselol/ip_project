{
  "name": "holiday-hype",
  "version": "1.0.0",
  "description": "Book hotels",
  "main": "main.js",
  "author": "anshg",
  "scripts": {
    "start": "electron .",
    "build-installer": "electron-builder"
  },
  "build": {
    "extraResources": [
      {
        "from": "./extraResources/",
        "to": "extraResources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "zip",
        "tar.gz"
      ],
      "desktop": {
        "Name": "Holiday Hype",
        "Icon": "build"
      }
    },
    "win": {
      "target": [
        "nsis",
        "squirrelWindows"
      ],
      "icon": "build",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "installerIcon": "build",
      "uninstallerIcon": "build",
      "uninstallDisplayName": "Holiday Hype"
    },
    "deb": {
      "maintainer": "Mayooonaiselol <anshgupta3552@gmail.com>",
      "icon": "build"
    },
    "rpm": {
      "maintainer": "Mayooonaiselol <anshgupta3552@gmail.com>",
      "icon": "build"
    },
    "directories": {
      "buildResources": "build"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mayooonaiselol/Holiday-Hype.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mayooonaiselol/Holiday-Hype/issues"
  },
  "homepage": "https://github.com/Mayooonaiselol/Holiday-Hype#readme",
  "devDependencies": {
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "electron-builder-squirrel-windows": "^23.3.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
